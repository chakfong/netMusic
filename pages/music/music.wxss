/* pages/music/music.wxss */
@import "music-list/music-list.wxss";
@import "music-grid/music-grid.wxss";
page{
	background-color: #444;
}
.bottom-container{
	width:100%;
	height:120rpx;
	position:fixed;
	background-color:#555;
	bottom:0rpx;
	border-radius:20rpx 20rpx 0 0;
	z-index:999;
	display:flex;
	flex-direction: row;
}
.playingPic{
	width:80rpx;
	height:80rpx;
	margin:20rpx 0 20rpx 20rpx;
	border-radius: 10rpx;
}
.musicInfo{
	display: flex;
	margin: 20rpx 50rpx 0 10rpx;
	width:380rpx;
	flex-direction: column;
	font-size:22rpx;
	color:#ddd;
	white-space: nowrap;
	overflow: hidden;
  text-overflow:ellipsis; 
}
.songButton{
	height:70rpx;
	width:70rpx;
	margin:25rpx 30rpx 0 0;
}
.container {
  background-color: #444;
	padding-bottom: 150rpx;
}
.top-container{
	z-index:100;
	display:flex;
	flex-direction: row;
	position:fixed;
	background-color: #444;
	top:0rpx;
}
.musics-template {
  margin-bottom: 30rpx;
}

.search {
  background-color: #333;
  height: 80rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
	border-radius: 20rpx 20rpx 20rpx 20rpx ;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
	color:#eee;
}

.placeholder {
  font-size: 14px;
  color: #888;
  margin-left: 10rpx;
}
.playingImg{
	height:70rpx;
	width:70rpx;
	margin-top:5rpx;
}
.search-panel{
    position:absolute;
    top:80rpx;
		padding-bottom: 150rpx;
		width:100%;
}

		


.xx-img{
    height: 30rpx;
    width: 30rpx;
    margin:auto 5rpx auto 10rpx;
}

.menuButtons{
	display: flex;
	flex-direction: row;
}
.menuButton{
	height:120rpx;
	width:120rpx;
	padding-top:50rpx;
	padding-bottom: 20rpx;
	margin: auto;
}
.menuButtons text{
	color:#ddd;
	font-size:80%;
	margin:auto;
}

.profile{
	width:100%;
	height:180rpx;
	border-radius: 20rpx 20rpx 20rpx 20rpx;
	background: #555;
	vertical-align:middle;
}


.myAvatarImg{
	height:120rpx;
	width:120rpx;
	margin:5% 5%;
	border-radius:100%;
	vertical-align:middle;
}

.container text{
	font-size: 80%;
	color:#ddd;
}

