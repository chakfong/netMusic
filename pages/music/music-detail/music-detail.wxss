/* pages/music/music-detail/music-detail.wxss */
page{
	background-color: #444;
	height:100%;
	width:100%;
	overflow: hidden;
}
.head-img{
    width:100%;
    height:100%;
    -webkit-filter:blur(100px);
}
.container{
	width:100%;
	height:100%;
	padding-top:200rpx;
	position: absolute;
	top:0rpx;
	display:flex;
	flex-direction: column;
}
.playingPic{
	width: 500rpx;
	height:500rpx;
	margin-left: 125rpx;
	border-radius: 50%
}
.bottom-container{
	position:fixed;
	bottom:0;
	padding-bottom: 50rpx;
	display:flex;
	flex-direction: column;
	width:100%;
}
.button-container{
	display:flex;
	flex-direction:row;
}

.button{
	display:flex;
	flex-direction:column;
	width:33%;
	font-size:28rpx;
}

.buttonImg{
	height:60rpx;
	width:60rpx;
	margin:auto;
}

.buttonText{
	size:30rpx;
	text-align:center;
	margin-top:10rpx;
	color:#ddd;
	height: 30rpx;
}

.slider{
	margin-top:80rpx;
}
.time{
	font-size:20rpx;
	margin-top:50rpx;
	color:white;
}
.time text{
	width:100rpx;
	margin: 0rpx 530rpx 0 45rpx;
}
.slider slider{
	position:absolute;
	width:525rpx;
	left:80rpx;
	margin-top:-110rpx;
}
.musicButton{
	display:flex;
	flex-direction: row;
	margin-left: 155rpx;
	margin-top:-40rpx;
}
.musicButton image{
	height:80rpx;
	width:80rpx;
	margin-right: 100rpx;
}

